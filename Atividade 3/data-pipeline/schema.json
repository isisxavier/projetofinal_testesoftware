{
  "fields": [
    {
      "name": "id",
      "type": "integer",
      "required": true
    },
    {
      "name": "name",
      "type": "string",
      "required": true
    },
    {
      "name": "age",
      "type": "integer",
      "required": true,
      "min": 0,
      "max": 120
    },
    {
      "name": "email",
      "type": "string",
      "required": true,
      "pattern": "^[^@\\s]+@[^@\\s]+\\.[^@\\s]+$"
    },
    {
      "name": "signup_date",
      "type": "string",
      "required": true,
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    {
      "name": "is_active",
      "type": "boolean",
      "required": true
    }
  ],
  "unique": [
    "id",
    "email"
  ]
}